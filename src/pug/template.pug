//- Стандартный шаблон страницы
include mixins.pug

block variables
	- var page_heading_titile // заголовок страницы
	- var breadcrumb_chain // Массив с хлебными крошками
	- var page_class
	- var isLogin = true
	
doctype html
html(class='no-js', lang="ru")
	head
		meta(name="robots", content="noindex, nofollow")
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=yes")
		//- Edge и ряд мобильных браузеров слишком умны. Отключим это.
		meta(name='format-detection', content='telephone=no')
		meta(name='format-detection', content='date=no')
		meta(name='format-detection', content='address=no')
		meta(name='format-detection', content='email=no')
		meta(content='notranslate', name='google')
		
		//- Favicon & icons
		link(rel="apple-touch-icon" sizes="180x180" href="./images/favicon/apple-touch-icon.png")
		link(rel="icon" type="image/png" sizes="32x32" href="./images/favicon/favicon-32x32.png")
		link(rel="icon" type="image/png" sizes="16x16" href="./images/favicon/favicon-16x16.png")
		link(rel="manifest" href="./images/favicon/site.webmanifest")
		link(rel="mask-icon" href="./images/favicon/safari-pinned-tab.svg" color="#53923f")
		meta(name="msapplication-TileColor" content="#53923f")
		meta(name="msapplication-TileImage" content="./images/favicon/mstile-144x144.png")
		meta(name="theme-color" content="#ffffff")
		
		<!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->

		block meta
			title Title

		block head
			link(href="css/style.min.css", rel="stylesheet")
			script.
				document.documentElement.className = document.documentElement.className.replace('no-js', 'js');
		
		block pixel-glass-templates
			
	body
		noscript У вас отключен JavaScript.
		
		.page.container(class= (page_class))
			.page__inner
				+header(isLogin)

				block page

			.page__footer
				+footer("footer")


		+mobile-menu()

		//- Popup
		+modal('addtocart', 'Товар добавлен в корзину', 'addtocart')
			.modal__body
				img(src="images/basket.png", alt="")

				.modal__info
					i.modal__info-icon.i-ui-info
					span Минимальная сумма заказа 3000&nbsp;#[span.rouble a]. Увеличьте ваш заказ минимум на 1500&nbsp;#[span.rouble a]

