@import "fw/variables"
@import "fw/mixins"

.index
	&__news
		margin-bottom 18px
		
	&__about-text
		font-size 15px
		line-height 1.333334
		
	&__slider
		margin-bottom 15px
		opacity 0
		
		.no-js &
			display none

		
	&__slide
		width 100%
		height 29vw
		
		background-repeat no-repeat
		background-position center
		background-size cover 
		
		+media-breakpoint-up(sm)
			height 160px
		+media-breakpoint-up(md)
			height 100px
		+media-breakpoint-up(lg)
			height 90px
		+media-breakpoint-up(xl)
			height 120px
	
	&__news-item
		margin-bottom 20px
		
	&__catalog
		margin-bottom 30px