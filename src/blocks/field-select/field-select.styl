// В этом файле должны быть стили для БЭМ-блока field-select, его элементов, 
// модификаторов, псевдоселекторов, псевдоэлементов, @media-условий...
// Очередность: http://nicothin.github.io/idiomatic-pre-CSS/#priority

$field-select__gray-lightest =               hsl(0, 0%, 90%)
$field-select__border-color =                hsl(0, 0%, 60%)

$field-select__line-height =                 1.5

$field-select__border-radius =               rem(3px)

.field-select 

	display block
	margin-bottom 1rem

	&__name 
		field-name()
	

	// &__input-wrap 

	&__select 
		display inline-block
		vertical-align middle
		width 100%
		line-height $field-select__line-height
		padding 4px 5px
		font-size inherit
		font-family inherit
		border 1px solid $field-select__border-color
		border-radius $field-select__border-radius
		appearance none
		background-color #fff
		cursor pointer

		&[multiple] 
			background-image none
			min-height 6.8em
		

		&::-ms-expand 
			display none
		

		&:active
		&:focus 
			field-focus()
		

		&[disabled]
		&[readonly] 
			cursor default
			background-color $field-select__gray-lightest
		
	

	&__help-text 
		field-help-text()
	

	// модификатор для спсиска в элементе каталога
	&_cat
		width 60px
		height 20px
		margin-bottom 0
		
		& ^[0]__select
			line-height 20px
			padding 0 10px 
			vertical-align top
			border none
			box-shadow inset 0px 3px 6px 0 rgba(0, 0, 0, 0.1) 
			background-position right 0 center
			background-size 20px 20px
			background-image embedurl('../blocks/field-select/bg-img/select-down-colored.svg', "utf8")
			background-repeat no-repeat
			// background-position right 0.3em center
			// background-size 1.063em 0.688em
	
	// модификатор для спсиска в элементе каталога
	&_card
		display inline-block
		vertical-align middle
		width 106px
		height 32px
		margin-bottom 0
		margin-right 20px
		
		& ^[0]__select
			line-height 32px
			padding 0 10px 
			vertical-align top
			border 1px solid #E5E5E5 
			box-shadow inset 0px 3px 6px 0 rgba(0, 0, 0, 0.1) 
			background-position right 0 center
			background-size 32px 32px
			background-image embedurl('../blocks/field-select/bg-img/select-down-clear.svg', "utf8")
			background-repeat no-repeat