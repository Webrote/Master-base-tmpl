mixin slick-carousel(id, mods)

	//- Принимает:
	//-   id      {string} - идентификатор
	//-   mods    {string} - список модификаторов
	//- Вызов:
		+slick-carousel('promo')
			div слайд1
			div слайд2
			div слайд3
			div слайд4
			div слайд5
			div слайд6
			div слайд7
			div слайд8

	-
		// список модификаторов
		var allMods = '';
		if(typeof(mods) !== 'undefined' && mods) {
			var modsList = mods.split(',');
			for (var i = 0; i < modsList.length; i++) {
				allMods = allMods + ' slick-carousel_' + modsList[i].trim();
			}
		}

	.slick-carousel(id=id, class=allMods)&attributes(attributes)
		block