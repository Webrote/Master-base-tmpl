// В этом файле должны быть стили для БЭМ-блока content, его элементов, 
// модификаторов, псевдоселекторов, псевдоэлементов, @media-условий...
// Очередность: http://nicothin.github.io/idiomatic-pre-CSS/#priority

.content
	h1
		font-size 30px
		font-weight 800 
		
	h2
		font-size 20px
		font-weight 800 
		margin-bottom 10px
	
	h3
		font-size 18px
		font-weight 800 
		margin-bottom 12px
	
	p
		color #333 
		font-size 16px
		line-height 1.3
	a
		font-size 16px
		line-height 1.3
		&:visited
			color $link-visited-color
			
	img
		max-width 100% 
		height auto
		display inline-block
		border 1px solid #D9D9D9 

		
	img + figcaption
		margin-top 5px
		margin-bottom 15px
		muted()
		font-style italic
		
	ol
		counter-reset li 
		list-style none 
		padding-left 0
		margin-bottom 1em
		text-shadow 0 1px 0 rgba(255,255,255,.5)
		
		li
			position relative
			padding-left 30px
			margin-bottom 5px
			
			&:before
				content counter(li)"."
				counter-increment li
				position absolute
				left 0
				top 0
				
				font-weight bold 
				
	ul
		padding-left 0
		list-style none 
		margin-bottom 1em
		text-shadow 0 1px 0 rgba(255,255,255,.5)
		
		li
			position relative
			padding-left 30px
			margin-bottom 5px
			
			&:before
				content "•"
				counter-increment li
				position absolute
				left 0
				top 0
				font-size 1.2em
				font-weight bold 
				line-height 1em