// В этом файле должны быть стили для БЭМ-блока number, его элементов, 
// модификаторов, псевдоселекторов, псевдоэлементов, @media-условий...
// Очередность: http://nicothin.github.io/idiomatic-pre-CSS/#priority

.number
	font-size 0
	white-space nowrap
	
	& > *
		vertical-align middle
	
	input[type="text"]
		font-size 16px
		width 36px
		border 1px solid #ccc
		padding 0 5px
		text-align right 
		user-select none
		box-shadow inset 0px 3px 6px 0 rgba(0, 0, 0, 0.1)

	&__minus
	&__plus
		cursor pointer
		position relative
		display inline-block
		width 24px
		border 1px solid #ccc
		user-select none
		
		&:before
			content ""
			display block
			height 10px
			width 10px
			absolute top 50% left 50% 
			transform translate(-50%, -50%) 
			line-height 10px
			background-repeat no-repeat
			background-position center
			background-size 10px 10px 
	
	&__minus
		&:before
			background-image embedurl('../blocks/number/bg-img/minus.svg', "utf8")
	&__plus	
		&:before
			background-image embedurl('../blocks/number/bg-img/plus.svg', "utf8")
	

	+media-breakpoint-up(sm)
		input[type="text"]
		&__minus
		&__plus
			height 24px
			
		&__minus
			border-right none
			
		&__plus	
			border-left none

	+media-breakpoint-down(xs)
		display flex
		flex-direction column

		input[type="text"]
		&__minus
		&__plus
			height 30px
			display block
			margin 0 auto
		
		input[type="text"]
			text-align center
			
		&__minus
		&__plus
			width 36px
			
		&__minus
			order 1
			border-top none
			
		&__plus	
			order -1
			border-bottom none