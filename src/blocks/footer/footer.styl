// В этом файле должны быть стили для БЭМ-блока footer, его элементов, 
// модификаторов, псевдоселекторов, псевдоэлементов, @media-условий...
// Очередность: http://nicothin.github.io/idiomatic-pre-CSS/#priority

.footer
	position relative
	// background-image url("../images/footer-bg.png")
	background-image linear-gradient(to right, #5cac41, #61af46, #82c569, #98d380, #74bb5a)
	background-repeat no-repeat
	background-size cover
	background-position bottom center
	padding 18px 20px 20px
	overflow hidden
	
	&:after
		content "" 
		display block
		width 386px
		height 78px
		background-image url('../images/footer-bg-img.png')
		background-repeat no-repeat
		absolute bottom 0 right 10%
		z-index 0
		
		+media-breakpoint-down(md)
			opacity 0.4
			
		+media-breakpoint-down(sm)
			right 50% 
			transform translateX(50%) 
	
	// +media-breakpoint-down(lg)
	// 	background-image linear-gradient(to right, #5cac41, #61af46, #82c569, #98d380, #74bb5a)
	
	+media-breakpoint-down(xs)
		text-align center
		padding-top 30px
		padding-bottom 10px

	&__row
		position relative
		z-index 1
		
		+media-breakpoint-down(lg)
			flex-direction column
	
	&__left
		+media-breakpoint-down(lg)
			display flex
			justify-content space-between

			
	&__center
		+media-breakpoint-down(lg)
			display flex
			justify-content space-around
		
	&__right
		display flex
		flex-direction column
		justify-content space-between
		align-items flex-end
		
		+media-breakpoint-down(lg)
			display flex
			flex-direction row
			justify-content space-between
			
	&__left
	&__center
	&__right
		
		+media-breakpoint-down(lg)
			flex-basis auto
		
		+media-breakpoint-down(xs)
			display block
			margin-bottom 10px
			

	// -----------------------
	&__phones
	&__address
	&__email
		position relative
		padding-left 25px
		margin-bottom 15px
		
		p 
			font-size 15px
			font-weight bold
			color #FFF 
			line-height 1
			margin-bottom 5px
			
			span
				font-weight normal
				
		+media-breakpoint-down(sm)
			padding-left 0
			
	&__phones
		
		+media-breakpoint-down(sm)
			width 40%
			
		+media-breakpoint-down(xs)
			width 100% 
		

	&__icon
		absolute top 0 left 0
		line-height 1
		
		&:before
			color $dark-green 
		
		+media-breakpoint-down(sm)
			display none
		
	&__caption
		font-size 14px
		font-weight bold 
		color #2E620D 
		margin-bottom 5px
		
	&__social
		margin-bottom 24px
		a
			margin-right 20px
			
			&:last-child
				margin-right 0
				
	&__creditcards
		span
			margin-right 20px
			
			&:last-child
				margin-right 0
		
	&__copyright
		font-size 21px
		font-weight bold
		color #2E620D 
		text-transform uppercase
		// border-bottom 1px solid transparent
		transit(,100ms)
		
		+hover-focus()
			color @color 
			text-decoration none
			text-shadow 0px 0px 5px rgba(#000,0.3)
			// border-bottom 1px solid @color
		